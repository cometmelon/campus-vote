# Database URL (defaults to SQLite for local dev)
DATABASE_URL=sqlite:///./campusvote.db

# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@host:5432/campusvote

# CORS Origins (JSON list)
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:5174", "http://127.0.0.1:5173", "http://127.0.0.1:5174"]

# JWT Secret (change in production!)
SECRET_KEY=your-secret-key-change-this

# Email (Resend.com)
RESEND_API_KEY=
FROM_EMAIL=noreply@campusvote.edu

# Voting settings
VOTING_LINK_EXPIRE_HOURS=24
DEFAULT_BATCH_SIZE=60
